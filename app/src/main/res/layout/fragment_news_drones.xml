<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/news_drones_bg" />

    <TextView
        android:id="@+id/Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/title_margin_start"
        android:layout_marginTop="@dimen/title_margin_top"
        android:layout_marginEnd="@dimen/title_margin_end"
        android:layout_marginBottom="@dimen/title_margin_bottom"
        android:text="@string/Title_Drones"
        android:textColor="#FFFFFF"
        android:textSize="34sp" />

    <TextView
        android:id="@+id/Text"
        android:layout_width="325dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/text_margin_start"
        android:layout_marginTop="@dimen/text_margin_top"
        android:layout_marginEnd="@dimen/text_margin_end"
        android:layout_marginBottom="@dimen/text_margin_bottom"
        android:justificationMode="inter_word"
        android:text="@string/Text_Drones"
        android:textColor="#FFFFFF" />

</RelativeLayout>